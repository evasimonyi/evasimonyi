<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link rel="stylesheet" href="/grid.css">
    <title>Fox player</title>
</head>

<body>
    <section>
        <header>
            <div class="notifications">
                <img src="./img/foxplayer.png" alt="Green-Fox-logo">
                <p>notifications</p>
                <div>
                    <span>playlists</span>
                    <i class="fas fa-plus"></i>
                </div>
            </div>
            <!-- <img src="./img/music-placeholder.png" alt="now-playing" class="artwork"> -->
        </header>
        <div class="playlist-container">
            <% playlists.forEach(function(item) { %>
            <p><%= item.playlistName %></p>
            <% }); %>
        </div>
    </section>

    <section>
        <div class="currently-playing">
            <p>currently playing</p>
            <p>currently playing222</p>
            <i class="fas fa-plus"></i>
            <i class="fas fa-star"></i>
        </div>
        <div class="tracks">
            <% songs.forEach(function(item) { %>
            <p><%= item.title %></p>
            <% }); %>
        </div>
    </section>

    <footer>
        <button class="rewind"></button>
        <button class="play"></button>
        <button class="forward"></button>
        <audio src="./music/Ars_Sonor_-_02_-_Never_Give_Up.mp3" controls timeupdate>
        </audio>
    </footer>
    <script src="frontend.js"></script>
</body>

</html>